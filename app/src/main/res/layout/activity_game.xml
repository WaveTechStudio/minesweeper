<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/remaining_flags_text_view"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/red_600"
        android:gravity="right"
        />

    <TextView
        android:id="@+id/elapsed_time_text_view"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/remaining_flags_text_view"
        android:background="@color/black"
        android:textColor="@color/red_600"
        android:gravity="right"
        />

    <Button
        android:id="@+id/finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/elapsed_time_text_view"
        android:text="@string/finish_button"
        android:textAllCaps="true"
        />

    <com.orangemako.minesweeper.board.BoardLayoutView
        android:id="@+id/board_layout_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/finish_button"
        android:background="@android:color/darker_gray"
        custom:gridLineColor="@color/blue_400"
        custom:gridLineWidth="3dp"
        custom:borderColor="@color/blue_400"
        custom:borderWidth="2dp"
        />
</RelativeLayout>
